{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS_PYTHON"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "required": true
    },
    "TELEGRAM_CHAT_ID": {
      "required": true
    },
    "LOGIN_PASSWORD": {
      "required": true
    }
  }
}
